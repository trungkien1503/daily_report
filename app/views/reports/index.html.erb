<% provide(:title, @user.name) %>
<div class="row">
    <aside class="span4">
        <section>
            <h1> <%= gravatar_for @user %>
            <%= @user.name %> </h1>
        </section>
    </aside>
    <div class="span8">
        <% if @user.reports.any? %>
        <ol class="reports">
            <%= render @reports %>
        </ol>
        <%= will_paginate @reports %>
        <% end %>
    </div>
</div>
