<% provide(:title, 'Sign up') %> <h1>Sign up</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages' %>
		
		<%= f.label :name %>
		<%= f.text_field :name ,:placeholder => "example"%>
		
		<%= f.label :email %>
		<%= f.text_field :email, :placeholder => "example@framgia.com" %>
		
		<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>