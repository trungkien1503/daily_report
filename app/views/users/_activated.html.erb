<%= form_for(@user.activation, remote: true) do |f| %>
<div class="row activated">
    <div>
        <%= f.hidden_field :activation_status, value: "inactivated"%>
    </div>
    <div class="span1">
        <%= gravatar_for @user, size:40%>
    </div>
    <div class="span4">
        <%= link_to @user.name,@user%> | <%=@user.email%>
    </div>
    <div class="span2">
        created at <%= @user.created_at.to_date%>
    </div>
    <div class="span3">
        <%= f.submit "Active", class: "btn btn-success" %>
    </div>
</div>

<% end %>
