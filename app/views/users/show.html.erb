<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= @user.email%>
      <%= Activation.find_by_user_id(@user.id).activation_status%>
    </section>
  </aside>
  <%if admin?%>
    <%= render 'group_assign'%>
  <% end %>
  
</div>